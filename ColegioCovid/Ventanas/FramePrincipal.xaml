<Page x:Class="ColegioCovid.Ventanas.FramePrincipal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ColegioCovid.Ventanas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="FramePrincipal">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="btnMantenimiento" Content="Mantenimiento" Grid.Column="0" Grid.Row="0" Margin="25,100,25,50" Background="DarkBlue"
            FontSize="30" FontWeight="Bold" Foreground="WhiteSmoke" Click="btnMant_Click"/>
        <Button x:Name="btnUso" Content="Uso" Grid.Column="0" Grid.Row="1" Margin="25,100,25,50" Background="Green"
            FontSize="30" FontWeight="Bold" Foreground="WhiteSmoke" Click="btnUso_Click"/>
    </Grid>
</Page>
